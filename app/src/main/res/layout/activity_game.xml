<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GameActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:id="@+id/activity_game_question_text"
    android:textColor="@color/colorPrimary"
    android:layout_margin="20dp"
    android:text="What's the name of the current french president?">
</TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/activity_game_answer1_btn"
        android:textColor="@color/colorAccent"
        android:background ="@android:color/white"
        android:layout_margin="2dp"
        android:text="François Hollande"
        >

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/activity_game_answer2_btn"
        android:textColor="@color/colorAccent"
        android:background ="@android:color/white"
        android:layout_margin="2dp"
        android:text="Jacques Chirac"
        >

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/activity_game_answer3_btn"
        android:textColor="@color/colorAccent"
        android:background ="@android:color/white"
        android:layout_margin="2dp"
        android:text="Nicholas Sarkozy"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/activity_game_answer4_btn"
            android:textColor="@color/colorAccent"
            android:background ="@android:color/white"
            android:layout_margin="2dp"
            android:text="Emmanuel Macron"
            />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/activity_game_answer5_btn"
        android:textColor="@color/colorAccent"
        android:background ="@android:color/white"
        android:layout_margin="2dp"
        android:text="François Mitterand"
        >

    </Button>
</LinearLayout>